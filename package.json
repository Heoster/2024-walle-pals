{
  "name": "walle-pals-2024",
  "version": "1.0.0",
  "description": "2024 Walle Pals - A modern interactive website connecting friends through a beautiful wall of frames",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:network": "HOST=0.0.0.0 nodemon server.js",
    "setup": "node scripts/setup.js",
    "build": "npm run build:css && npm run build:js && npm run generate:friends",
    "build:css": "postcss css/main.css -o dist/css/main.min.css",
    "build:js": "webpack --mode production",
    "generate:friends": "node scripts/generate-friends.js",
    "serve": "http-server dist -p 3000",
    "watch": "concurrently \"npm run watch:css\" \"npm run watch:js\"",
    "watch:css": "postcss css/main.css -o dist/css/main.min.css --watch",
    "watch:js": "webpack --mode development --watch",
    "lint": "eslint js/**/*.js scripts/**/*.js",
    "test": "jest",
    "clean": "rimraf dist",
    "postinstall": "npm run setup"
  },
  "keywords": [
    "friends",
    "website",
    "interactive",
    "gallery",
    "memories"
  ],
  "author": "Walle Pals Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "babel-loader": "^9.1.3",
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}